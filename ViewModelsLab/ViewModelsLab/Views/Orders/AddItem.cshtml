@model ViewModelsLab.Models.AddItemViewModel

@{
    ViewBag.Title = "AddItem";
}

<h2>Add Item To Order</h2>

@*// TODO: Complete list *@

@using (@Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>
            New Item
        </legend>

        @Html.HiddenFor(model => model.OrderId)

        <div class="editor-label">
            @Html.DisplayNameFor(model => model.ProductName)
        </div>
        <div class="editer-field">
            @Html.DropDownListFor(model => model.ProductName, 
                    Model.ProductList,
                    "Please select...")
            @Html.ValidationMessageFor(model => model.ProductName)
        </div>
        <div class="editor-label">
            @Html.DisplayNameFor(model => model.Quantity)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Quantity)
            @Html.ValidationMessageFor(model => model.Quantity);
        </div>
    </fieldset>
    <input id="Add" type="submit" value="Add to order" class="submit_button" />
}
@Html.ActionLink("Back to Detail", "OrderDetail", new { id = Model.OrderId })